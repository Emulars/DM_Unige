@model IoTApp.Models.Ride
@{
    ViewData["Title"] = "Create Ride";
}

<h1>Create Ride</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Driver" class="control-label">Driver</label>
        <select id="Driver" name="Driver" class="form-control select2" required>
            <option value="">Select Driver</option>
            @foreach (var user in (dynamic)ViewData["Drivers"])
            {
                <option value="@user.Id">@user.Email</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Instructor" class="control-label">Instructor</label>
        <select id="Instructor" name="Instructor" class="form-control select2" required>
            <option value="">Select Instructor</option>
            @foreach (var user in (dynamic)ViewData["Instructors"])
            {
                <option value="@user.Id">@user.Email</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Prenotation" class="control-label">Prenotation</label>
        <input asp-for="Prenotation" class="form-control" id="datetimepicker" required/>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn w-100 custom-button" />
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}
