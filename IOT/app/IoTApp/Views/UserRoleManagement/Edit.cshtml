@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group">
        <label>Email</label>
        <p class="form-control-static">@Model.Email</p>
    </div>
    <div class="form-group">
        <label>Roles</label>
        @foreach (var role in ViewBag.Roles)
        {
            <div class="form-check">
                <input type="radio" class="form-check-input" name="selectedRoles" value="@role" @(ViewBag.UserRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>
    <button type="submit" class="btn custom-button mt-3 w-100">Save</button>
</form>
